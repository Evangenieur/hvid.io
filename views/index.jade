extends layout

block content
    iframe#player
        
    div#clickjack

    section#main.animated
        header#header
            h1 
                span #h
                | vid
                span .io
            p.tagline World Wide Watch - Watch our World live

            form#form(onsubmit="return false")
                input#keyword(name='keyword', placeholder='any hashtag or keyword...', autocomplete='off')

        div#results

        div#loading
            div#counter

        div#close

